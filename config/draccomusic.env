# Canal: @draccomusic (Render)
CHANNEL_NAME=draccomusic

# Chave/URL da live
# STREAM_URL=rtmp://a.rtmp.youtube.com/live2/SUA-CHAVE-AQUI
# YOUTUBE_STREAM_KEY=SUA-CHAVE-AQUI

# Caminhos de mídia
MP3_DIR=/app/musicas
VIDEO_FILE=/app/video.mp4
# VIDEO_SOURCE_URL=https://exemplo.com/videos/draccomusic.mp4

# Configuração da qualidade (ajustada para Render free tier - valores mínimos para estabilidade)
VIDEO_SCALE=640:360
VIDEO_FPS=12
VIDEO_PRESET=ultrafast
VIDEO_BITRATE=1200k
VIDEO_MAXRATE=1500k
VIDEO_BUFSIZE=3000k
GOP_SIZE=24
VIDEO_FILTER_EXTRA=fps=12

# Áudio (reduzido para economizar CPU)
AUDIO_BITRATE=96k
AUDIO_SAMPLE_RATE=44100

# Encoder / ajustes adicionais (otimizado para recursos limitados)
ENFORCE_CBR=1
FFMPEG_THREADS=1
FORCE_SQUARE_PIXELS=1
ENABLE_SERVER=1

